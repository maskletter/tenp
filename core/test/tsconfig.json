
{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "../",
    "sourceMap": false,
    "declaration": false,
    "noErrorTruncation": true,
    "strictNullChecks": false,
    "allowJs": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strict": true,
    "alwaysStrict": false,
    "noImplicitUseStrict": false,
    "noImplicitAny": true, 
    "allowSyntheticDefaultImports": false,
    "strictPropertyInitialization": false,
    "target": "es5",
    "rootDir":"../",      
    "outDir":"./dist",     
    "watch":true,             
    "typeRoots": [
      "../node_modules/@types", "./types", "../lib/plugin"
    ],
    "lib": [
      "es2016",
      "dom"
    ]
  },
  "include": [
    "../**/*"
  ]
}
