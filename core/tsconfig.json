{
  "compileOnSave": false,
  "compilerOptions": {
    "declaration": true,
    "baseUrl": "src",
    "sourceMap": false,
    "noErrorTruncation": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strict": true,
    "alwaysStrict": false,
    "strictNullChecks": false,
    "noImplicitUseStrict": false,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": false,
    "strictPropertyInitialization": false,
    "target": "es5",
    "rootDir": ".",
    "outDir": "./dist",
    "watch": true,
    "typeRoots": [
      "node_modules/@types",
      "./types"
    ],
    "lib": [
      "es2016",
      "dom"
    ]
  },
  "include": [
    "./**/*",
    "./types/*"
  ]
}